<%- include('include/header-connect') %>

<section  class="page-title cyan darken-1 white-text">
    <div class="container">
        <div class="row">
            <div id="logo-title" class="col s3 m1">
                <i class="medium material-icons">search</i>
            </div>

            <div class="col s9 m8">
                <h3><%=title%></h3>
            </div>
        </div>

    </div>

</section>

<section class="page-content" id="rechercherOffres">
    <div class="container">
        <div class="row">
            <div class="col s12 m7 offset-m2">

                <h4>Poste recherché</h4>
                <div class="input-field col s12">
                    <p>Intitulé du poste</p>
                    <input placeholder="Mots-cles" id="intitulePoste" type="text" class="validate">

                </div>

                <div class="input-field col s12">
                    <p>Lieu du poste</p>
                    <input placeholder="Pays, région, département ou ville" id="lieu" type="text" class="validate">

                </div>

                <div class="input-field col s12">
                    <form action="#">
                        <p>Distance (en km)</p>
                        <p class="range-field">
                            <input type="range" id="distance" min="0" max="100" value="0" />
                        </p>
                    </form>
                </div>

                <h4>Niveau d'étude</h4>
                <div class="col s12">

                    <p>
                        <input type="checkbox" id="bac+5" />
                        <label for="bac+5">BAC +5</label>
                    </p>

                    <p>
                        <input type="checkbox" id="bac+4" />
                        <label for="bac+4">BAC +4</label>
                    </p>

                    <p>
                        <input type="checkbox" id="bac+3" />
                        <label for="bac+3">BAC +3</label>
                    </p>

                    <p>
                        <input type="checkbox" id="bac+2" />
                        <label for="bac+2">BAC +2</label>
                    </p>

                    <p>
                        <input type="checkbox" id="bac+1" />
                        <label for="bac+1">BAC +1</label>
                    </p>

                    <p>
                        <input type="checkbox" id="bac" />
                        <label for="bac">BAC</label>
                    </p>

                    <p>
                        <input type="checkbox" id="bep" />
                        <label for="bep">BEP</label>
                    </p>

                    <p>
                        <input type="checkbox" id="cap" />
                        <label for="cap">CAP</label>
                    </p>
                </div>


                <div class="switch ">
                    <h4>Adapté aux handicaps</h4>
                    <label>
                        Non
                        <input type="checkbox">
                        <span class="lever"></span>
                        Oui
                    </label>
                </div>




                <p class="center-align"><a class="waves-effect waves-light btn blue-grey darken-1"><i class="material-icons left">search</i>Rechercher</a></p>
            </div>

            <div class="col s12 m3">
                <!--<p><a class="waves-effect waves-light btn blue-grey darken-1"><i class="material-icons left">info</i>En savoir plus</a></p>-->
            </div>
        </div>
    </div>



</section>


<%- include('include/footer') %>
